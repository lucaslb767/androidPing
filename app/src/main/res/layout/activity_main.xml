<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/value_20dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_digitar_url"
        android:textStyle="bold"
        android:textSize="@dimen/font_20sp"
        android:textColor="@color/cor_branca"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="@dimen/inside_padding">

        <EditText android:inputType="textUri"
            android:id="@+id/texto_linkurl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_https"
            android:layout_weight="1"
            android:autoLink=""/>

        <Button
            android:id="@+id/botao_Checar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_circular"/>

    </LinearLayout>



    <TextView
        android:id="@+id/texto_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/font_15sp"
        android:textColor="@color/cor_branca"
        android:text=""/>



</LinearLayout>